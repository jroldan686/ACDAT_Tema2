<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="jrl.acdat.acdat_tema2.Ejercicio5Activity"
    android:weightSum="1" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descarga de imagenes"
        android:id="@+id/txvTituloEjercicio5"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ruta al fichero:"
        android:id="@+id/txvRutaFichero"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="218dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtRutaFichero"
            android:layout_weight="1.19" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descargar"
            android:id="@+id/btnDescargar"
            android:layout_gravity="right" />
    </LinearLayout>

    <ImageView
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/imgvImagen"
        android:layout_weight="0.77" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="&lt;"
            android:id="@+id/btnAnterior"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="89dp"
            android:layout_height="86dp"
            android:text=">"
            android:id="@+id/btnSiguiente"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:layout_weight="0.03"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
